<TestGive>:
    on_enter:
        root.enter()
    MDBoxLayout:
        orientation:'vertical'
        MDTopAppBar:
            id:tbar
            pos_hint: {"top": 1}
            title:''
            right_action_items:[['trash-can', lambda x: root.delete()],['home', lambda x: root.home()]]            
               
        MDScrollView:
            id:scrollv
            do_scroll_x: False
            do_scroll_y: True
            
            MDGridLayout:
                id:main_grid
