<TestMenu>:
    on_enter:
        root.enter()
    MDBoxLayout:
        orientation:'vertical'
        MDTopAppBar:
            id:tbar
            title:''
            right_action_items: [['home', lambda x: root.home()]]
            
        ScrollView:
            MDList:
                id: flist
                padding: 10,30
                spacing: 0,20
                
    MDFloatingActionButton:
        icon: "plus"
        pos_hint: {"center_x": .85, "center_y": .1}
        on_release:
            root.add_exam()

