<NewTargetBox>:
    orientation:'vertical'
    size_hint_y:None
    height:'140dp'
    
    MDTextField:
        hint_text:'Target'
        required:True
        multiline:False
        text:'New Target'
        id:tar
        text_color_focus:'red'
        
    MDTextField:
        hint_text:'By (DD/MM/YYYY) - '
        required:True
        multiline:False
        text:''
        id:date
        text_color_focus:'blue'
        validator: "date"
        date_format: "dd/mm/yyyy"
        
